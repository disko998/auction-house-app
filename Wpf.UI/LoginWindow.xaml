<Window x:Class="Wpf.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.UI"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Margin="0,0,90,0" Text="Username:" Width="60"></TextBlock>
        <TextBox MaxLength="30" Name="tbUsername" Text="" Margin="0,0,0,5" Width="150" Height="25"></TextBox>
        <TextBlock Margin="0,0,90,0" Text="Password:" Width="60"></TextBlock>
        <PasswordBox MaxLength="30" Name="tbPassword" Password="" Margin="0,0,0,5" Width="150" Height="25"></PasswordBox>
        <Button Margin="50,0,0,0" Width="100" Height="25" Content="Login" Click="Button_Click"></Button>
        <Button Margin="50,5,0,0" Width="100" Height="25" Content="Registration" Click="Button_Click_1"></Button>
    </StackPanel>
</Window>
